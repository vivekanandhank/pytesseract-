from PIL import Image                                                   # importing libraries
import pytesseract
import argparse
import cv2
import os


image = cv2.imread('')                                                  # reading the image
image = cv2.resize(image, None, fx=2, fy=2, interpolation=cv2.INTER_CUBIC) # resizing the image 
gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)                             # converting RGB colour to gray colour for better understanding

gray = cv2.threshold(gray, 0, 255,                                         # implementing binary threshold
cv2.THRESH_BINARY | cv2.THRESH_OTSU)[1]

gray = cv2.medianBlur(gray, 3)

filename = "{}.png".format(os.getpid())
cv2.imwrite(filename, gray)

pytesseract.pytesseract.tesseract_cmd = r'C:\Program Files\Tesseract-OCR\tesseract'               # implementing pytesseract for reading the text
text = pytesseract.image_to_string(Image.open(filename))
os.remove(filename)
